{
  "name": "reefline-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for the Reefline container image security platform",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "reefline-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "start:stdio": "node build/index.js --stdio",
    "start:http": "node build/index.js --http",
    "start:http:port": "node build/index.js --http --port"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0"
  }
}
